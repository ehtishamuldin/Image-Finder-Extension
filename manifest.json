{
    "manifest_version": 3,
    "name": "Image Finder",
    "description": "A Chrome extension that lists the file extensions of images on the current page.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",  
            "48": "icon.png", 
            "128": "icon.png" 
        }
    },
    "icons": {
        "16": "icon.png", 
        "48": "icon.png",   
        "128": "icon.png" 
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["*"],
            "matches": ["<all_urls>"]
        }
    ]
}
